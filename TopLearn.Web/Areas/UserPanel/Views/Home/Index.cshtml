@using TopLearn.Core.Convertors
@model TopLearn.Core.DTOs.InformationUserViewModel
@{
    ViewData["Title"] = "پنل کاربری" + Model.UserName;
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a asp-action="Index"> پنل کاربری </a></li>
        </ul>
    </nav>
</div>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>

                        <div class="avatar-layer">
                            <div class="img-layer">
                                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                                <img src="images/pic/avatar.jpg">
                            </div>
                            <div class="detail">
                                <span style="font-size: 20px"> @Model.UserName </span>
                                <span> عضویت : @Model.RegisterDate.ToShamsi() </span>
                            </div>
                        </div>

                        <section>
                            <header><h3 style="font-size: 25px"> میز کار </h3></header>
                            <div class="inner">
                                <ul>
                                    <li><a href="" style="font-size: 18px"> مشاهده حساب کابری </a></li>
                                    <li><a href="" style="font-size: 18px"> ویرایش حساب کابری </a></li>
                                    <li><a href="" style="font-size: 18px"> تغییر رمز عبور </a></li>
                                    <li><a href="" style="font-size: 18px"> تنظیمات حساب کاربری </a></li>
                                    <li><a href="" style="font-size: 18px"> خروج از حساب کاربری </a></li>
                                </ul>
                            </div>
                        </section>
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1 style="font-size: 25px"> داشبورد </h1></header>
                        <div class="inner">
                            <div class="account-information">
                                <h3 style="font-size: 20px"> اطلاعات کاربری </h3>
                                <ul>
                                    <li style="font-size: 18px"> <i class="zmdi zmdi-account"></i> نام و نام خانوادگی : @Model.UserName </li>
                                    <li style="font-size: 18px"> <i class="zmdi zmdi-email"></i> ایمیل : @Model.Email </li>
                                    <li style="font-size: 18px"> <i class="zmdi zmdi-calendar-check"></i> تاریخ عضویت : @Model.RegisterDate.ToShamsi() </li>
                                    <li style="font-size: 18px"> <i class="zmdi zmdi-money"></i> موجودی حساب : @Model.Wallet تومان</li>
                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
