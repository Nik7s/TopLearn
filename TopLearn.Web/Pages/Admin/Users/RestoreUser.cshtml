@page "{userId}"
@model TopLearn.Web.Pages.Admin.Users.RestoreUserModel
@{
    ViewData["Title"] = "ویرایش کاربر";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش کاربر</h1>
    </div>
</div>

<div class="row">
    <form method="post">
        <div class="col-md-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    اطلاعات کاربر
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <label>نام کاربری : </label>
                        <input type="text" disabled class="form-control" value="@Model.RestoreUserViewModel.UserName">
                    </div>
                    <div class="form-group">
                        <label>ایمیل : </label>
                        <input type="email" disabled class="form-control" value="@Model.RestoreUserViewModel.Email">
                    </div>
                    <div class="form-group">
                        <label>فعال : </label>
                        @if (Model.RestoreUserViewModel.IsActive)
                        {
                            <input type="checkbox" disabled checked class="">
                        }
                        else
                        {
                            <input type="checkbox" disabled class="">
                        }
                    </div>
                    <div class="form-group">
                        <label>نقش های کاربر</label>
                        @foreach (var role in Model.RestoreUserViewModel.Roles)
                        {
                            @if (Model.RestoreUserViewModel.SelectedRole == role.RoleId)
                            {
                                <div class="radio">
                                    <label>

                                        <input type="radio" disabled checked name="SelectedRole" value="@role.RoleId"> @role.RoleTitle

                                    </label>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-size: 2rem">
                    تصویر پروفایل
                </div>
                <div class="panel-body">
                    <p></p>
                    <p></p>
                    <img id="img" class="thumbnail" style="width: 250px; max-width: 250px" src="/UserAvatar/@(Model.RestoreUserViewModel.CurrentAvatar)" />
                    <br />
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading" style="font-size: 2rem">
                    باز گرداندن کاربر
                </div>
                <div class="panel-body">
                    <div class="row col-md-12">
                        <p style="text-align: center">
                            <input style="font-size: 2rem; width: 60%;" type="submit" value="باز گردانی" class="btn btn-success" />
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
