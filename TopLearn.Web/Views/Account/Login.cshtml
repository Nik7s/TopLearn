@model TopLearn.Core.DTOs.User.LoginViewModel
@{
    ViewData["Title"] = "ورود به سایت";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item active" aria-current="page"><a asp-action="Login">ورود به سایت</a></li>
        </ul>
    </nav>
</div>

<main class="client-page">
    <div class="container-content" style="width: 500px">

        <header><h2> ورود به سایت </h2></header>
        
        @if(ViewBag.notactive==true)
        {
            <div class="alert alert-danger">
                    <h2 style="font-size: 25px">@ViewBag.UserName عزیز</h2>
                    <br/>
                    <div class="text-center">
                        <p style="font-size: 25px">حساب شما فعال سازی نشده است!</p>
                        <br/>
                        <p style="font-size: 20px">جهت تایید حساب کاربری خود از طریق لینکی که به آدرس ایمیل @ViewBag.Email ارسال شده است , اقدام نمایید .</p>
                    </div>
                </div>
                <br/>
                <p style="font-size: 18px"> * برای ارسال مجددا لینک تایید ایمیل , روی ارسال مجدد کلیک نمایید * </p>
                <div class="link">
                    <a href="/SendActiveEmail/@ViewBag.Email" style="font-size: 18px"> <i class="zmdi zmdi-mail-send"></i> ارسال مجدد </a>
                </div>
        }
        else if(ViewBag.Done == true)
        {
            <div class="alert alert-success">
                <h2 style="font-size: 25px">@ViewBag.UserName عزیز</h2>
                <br />
                <div class="text-center">
                    <p style="font-size: 25px;">ورود شما با موفقیت انجام شد!</p>
                    <br />
                </div>
            </div>

            <div class="link">
                <a href="/" style="font-size: 18px"> <i class="zmdi zmdi-account"></i> صفحه اصلی </a>
                <a href="/userpanel" style="font-size: 18px"> <i class="zmdi zmdi-account"></i> پنل کاربری </a>
            </div>
        }
        else
        {
            <div class="form-layer">

                <form asp-action="Login" method="post">
                    
                    <input type="hidden" asp-for="ReturnPath"/>

                    <div class="input-group">
                        <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                        <input asp-for="Email" type="email" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                    </div>
                    <span asp-validation-for="Email"></span>

                    <div class="input-group">
                        <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                    </div>
                    <span asp-validation-for="Password"></span>
                    <div class="remember-me">
                        <label style="font-size: 20px"><input asp-for="RememberMe" type="checkbox" name="">  مرا بخاطر بسپار </label>
                    </div>
                    <span asp-validation-for="RememberMe"></span>

                    <div class="link">
                        <a href="/ForgotPassword" style="font-size: 18px"> <i class="zmdi zmdi-lock"></i>بازیابی کلمه عبور</a>
                        <a href="/Register" style="font-size: 18px"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                    </div>

                    <button class="btn btn-success"> ورود به سایت </button>

                </form>
            </div>
        }

    </div>
</main>